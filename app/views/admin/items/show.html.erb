
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>商品詳細</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, width: '100%', height: '100%' %>
      <% else %>
        <%= image_tag 'no_image', size: "200x200" %>
      <% end %>
    </div>
    <div class="col-md-6">
      <table>
      <tr>
        <th>商品名</th>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <th>商品説明</th>
        <td><%= @item.explanation %></td>
      </tr>
      <tr>
        <th>ジャンル</th>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <th>税込価格<br>（税抜価格）</th>
        <td>
          <%= @item.unit_price.to_s(:delimited) %>
          (<%= @item.unit_price %>)円
        </td>
      </tr>
      <tr>
        <th>販売ステータス</th>
        <td>@item.is_selling_status</td>
      </tr>
      </table>
      <%= link_to "編集する",edit_admin_item_path(@item), class:"btn-btn-success" %>
    </div>
  </div>
</div>