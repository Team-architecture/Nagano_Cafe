<div class="container">
  <div class="row justify-content-end mb-3">
    <div class="col-auto">
      <%= link_to raw('<i class="fas fa-plus"></i>'), new_admin_item_path, class: 'plus-button' %>
    </div>
  </div>


<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>商品一覧</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-5">
      <table class="table">
        <thead>
          <tr>
            <td>商品ID</td>
            <td>商品名</td>
            <td>税抜き価格</td>
            <td>ジャンル</td>
            <td>ステータス</td>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id%></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td><%= item.sale_status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>