<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>ジャンル編集</h2>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-4">
      <%= form_with model: @genre, url: admin_genre_path(@genre.id) do |f| %>
      <table>
        <tbody>
          <tr>
            <td>ジャンル名</td>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit "変更を保存", class: "btn-btn-success" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>