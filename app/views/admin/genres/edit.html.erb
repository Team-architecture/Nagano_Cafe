<div class="container-fluid" style="background-image: url('<%= asset_path('大理石.jpg') %>');
background-size: cover; background-position: center center;height: 100vh;">
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2>ジャンル編集</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <%= form_with model: @genre, url: admin_genre_path(@genre.id) do |f| %>
      <table>
        <tbody>
          <tr>
            <td class="pr-5">ジャンル名</td>
            <td><%= f.text_field :name %></td>
            <td class="pl-5"><%= f.submit "変更を保存", class: "btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>
</div>