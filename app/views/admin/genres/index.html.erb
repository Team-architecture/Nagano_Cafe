<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>ジャンル一覧・追加</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-5">
      <%=form_with model: @genre, url: admin_genres_path do |f| %>
      <table>
        <tbody>
          <tr>
            <td>ジャンル名</td>
            <td><%= text_field :name %></td>
            <td><%= f.submit "新規投稿", class: "btn btn-info" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>

    <div class="row">
      <table>
        <thead>
          <th>ジャンル</th>
          <th></th>
        </thead>
        <tbody>
          <%= @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
