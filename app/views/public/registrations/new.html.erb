<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>新規会員登録</h2>
    </div>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
 <div class="container mt-3">
 <form>
  <div class="form-inline">
    <%= f.label :last_name, "（姓）" %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="form-inline">
    <%= f.label :first_name, "（名）" %><br />
    <%= f.text_field :first_name %>
  </div>
  </form>
 </div>

  <div class="field row" style="margin-left:20px; ">
    <%= f.label :last_name_kana, "（セイ）" %><br />
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field row" style="margin-left:20px; ">
    <%= f.label :first_name_kana, "（メイ）" %><br />
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field row" style="margin-left:20px; ">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field row" style="margin-left:20px; ">
    <%= f.label :post_code, "郵便番号" %><br />
    <%= f.text_field :post_code %>
  </div>

  <div class="field row" style="margin-left:20px; ">
    <%= f.label :address, "住所" %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field row" style="margin-left:20px; ">
    <%= f.label :phone_number, "電話番号(ハイフンなし)" %><br />
    <%= f.text_field :phone_number %>
  </div>


  <div class="field row" style="margin-left:20px; ">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <em><%= @minimum_password_length %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field row" style="margin-left:20px; ">
    <%= f.label :password_confirmation, "パスワード(確認用)"%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済の方は</h2>
<p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
</div>


