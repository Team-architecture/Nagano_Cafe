<div class="container-fluid" style="background-image: url('<%= asset_path('大理石.jpg') %>');
background-size: cover; background-position: center center;height: 100vh;">
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <h2>新規会員登録</h2>
    </div>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
 <div class="container mt-3">

  <div class="row">
   <div class="col-3">
    <%= f.label :last_name, "（姓）" %>
   </div>
   <div class="col-3">
    <%= f.text_field :last_name, class:"w-100" %>
   </div>
   <div class="col-3">
    <%= f.label :first_name, "（名）" %>
    </div>
    <div class="col-3">
    <%= f.text_field :first_name, class:"w-100" %>
   </div>
  </div>
  
  <div class="row">
    <div class="col-3">
    <%= f.label :last_name_kana, "（セイ）" %>
    </div>
    <div class="col-3">
    <%= f.text_field :last_name_kana,class:"w-100" %>
    </div>
    <div class="col-3">
    <%= f.label :first_name_kana, "（メイ）" %>
    </div>
    <div class="col-3">
    <%= f.text_field :first_name_kana,class:"w-100" %>
    </div>
  </div>

  <div class="row" >
    <div class="col-3">
    <%= f.label :email, "メールアドレス" %>
    </div>
    <div class="col-3">
    <%= f.email_field :email,class:"w-100", autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row" >
    <div class="col-3">
    <%= f.label :post_code, "郵便番号" %>
    </div>
    <div class="col-3">
    <%= f.text_field :post_code,class:"w-100" %>
    </div>
  </div>

  <div class="row" >
    <div class="col-3">
    <%= f.label :address, "住所" %>
    </div>
    <div class="col-3">
    <%= f.text_field :address,class:"w-100" %>
    </div>
  </div>

  <div class="row" >
    <div class="col-3">
    <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
    </div>
    <div class="col-3">
    <%= f.text_field :phone_number,class:"w-100" %>
    </div>
  </div>

  <!--<sssss></sssss>-->
  <div class="row" >
    <div class="col-3">
    <%= f.label :password, "パスワード(6文字以上)" %>
    </div>
    <div class="col-3">
    <%= f.password_field :password,class:"w-100", autocomplete: "new-password" %>
    </div>
  </div>

  <div class="row" >
    <div class="col-3">
    <%= f.label :password_confirmation, "パスワード(確認用)"%>
    </div>
    <div class="col-3">
    <%= f.password_field :password_confirmation,class:"w-100", autocomplete: "new-password" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3"></div>
    <div class="col-3">
    <%= f.submit "新規登録", class:"btn btn-success ml-3"%>
    </div>
  </div>
 </div>
<% end %>

<h2>既に登録済の方は</h2>
<p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
</div>
</div>


