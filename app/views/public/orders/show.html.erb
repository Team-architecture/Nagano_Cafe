public/order#show
<div class="container">
  <div class="row">
    <div class="col-7">
      <h2注文履歴詳細</h2>
    </div>
    <div class="row">
      <div class="col-7">
        <h4注文履歴詳細</h4>
          <table>
            <thead>
              <tr style="background-color:#F5F5F5;" >
                <th>注文日</th>
                <th>配送先</th>
                <th>支払方法</th>
                <th>ステータス</th>
              </tr>
            </thead>
            <tbody>
              <%# @orders.each do |order| %>
                <tr>
                  <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
                  <td>
                    <%= order.postal_code %><br>
                    <%= order.address %><br>
                    <%= order.name %></td>
                  <td><%= order.payment_method %></td>
                  <td><%= order.status %></td>
                  <td><%= link_to "表示する", order_path, class: "btn-btn-primary" %></td>
                </tr>
              <%# end %>
            </tbody>
          </table>
      </div>
      
      
      <div class="col-3">
        <h4>請求情報</h4>
         <table>
        <thead>
          <tr style="background-color:#F5F5F5;" >
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
      </div>
    </div> 
  </div>
</div>