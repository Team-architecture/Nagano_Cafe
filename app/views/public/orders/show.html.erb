public/order#show
<div class="container">
  <div class="row">
    <div class="col-8">
      <h2></h2>注文履歴詳細</h2>
    </div>
  </div>

    <div class="row">
      <div class="col-6">
        <h4>注文履歴詳細</h4>
          <table>
            <thead>
              <tr style="background-color:#F5F5F5;" >
                <th>注文日</th>
                <th>配送先</th>
                <th>支払方法</th>
                <th>ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>                <tr>
                  <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
                  <td>
                    <%= order.postal_code %><br>
                    <%= order.address %><br>
                    <%= order.name %></td>
                  <td><%= order.how_to_pay %></td>
                  <td><%= order.status %></td>
                  <!--<td><%#= link_to "表示する", order_path, class: "btn-btn-primary" %></td>-->
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
      
      
    <div class="col-6">
      <h4>請求情報</h4>
      <table>
        <thead>
          <tr style="background-color:#F5F5F5;" >
            <th>商品合計</th>
            <th>配送料</th>
            <th>ご請求金額</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%=%></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div> 
</div>