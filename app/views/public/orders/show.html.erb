public/order#show
<div class="container">
  <div class="row">
    <div class="col-8">
      <h2>注文履歴詳細</h2>
    </div>
  </div>

    <div class="row">
      <div class="col-6">
        <h6>注文情報</h6>
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th style="background-color:#F5F5F5;">注文日</th>
              <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>  
              <th style="background-color:#F5F5F5;" >配送先</th>
              <td>
                <%= @order.postal_code %><br>
                <%= @order.address %><br>
                <%= @order.name %>
              </td>
            </tr>
            <tr>
              <th style="background-color:#F5F5F5;" >支払方法</th>
              <td><%= @order.how_to_pay %></td>
            </tr>
            <tr>
              <th style="background-color:#F5F5F5;" >ステータス</th>
              <td><%= @order.status %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    
      
      <div class="col-6">
        <h6>請求情報</h6>
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th style="background-color:#F5F5F5;" >商品合計</th>
              <td></td>
            </tr>
            <tr>
              <th>配送料</th>
              <td></td>
            </tr>
            <tr>
              <th>ご請求金額</th>
              <td></td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>
  
  
  <div class="row">
    <div class="col-8">
      <h6>注文内容</h6>
      <table>
        <thead>
          <tr style="background-color:#F5F5F5;" >
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.item.name %></td>
              <td><%= order.item.price %></td>
              <td><%= number_field_tag "order_details[#{order.id}][quantity]" %></td>
              <td><%= number_to_currency(order.item.price * order.quantity) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>