<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%#= render 'admin/genres/genre_sidebar', genres: @genres %>
    </div>
    <div class="col-md-9" >
      <h1 class="items-title">
        <% if params[:genre_id] %>
          <%= @genre.name %>
        <% else %>
          商品一覧
        <% end %>
      </h1>
      <strong> 全<%= @items.count %>件 </strong>
      <div class="items-list">
        <% @items.each do |item| %>
          <% if item.genre.is_active == true %>
            <div class="items-list-item">
              <%= link_to items_path(items) do %>
                <%= attachment_image_tag items, :image, fallback: 'no_image.jpg',size: "190x150" %><br>
              <% end %>
              <%= items.name %><br>
              ¥<%= (items.price*1.1).floor.to_s(:delimited)%>
            </div>
          <% end %>
        <% end %>
      </div>
      <%= paginate @items %>
    </div>
  </div>
</div>