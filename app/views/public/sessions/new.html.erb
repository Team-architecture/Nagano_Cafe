<div class="container-fluid" style="background-image: url('<%= asset_path('大理石.jpg') %>');
background-size: cover; background-position: center center;height: 100vh;">
<div class="container">
    <div class="col-md-8">
　　　<h2 class="mt-4">ログイン</h2>
　    <h4>会員の方はこちらからログイン</h4>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group row">
    <div class="col-md-4">
    <%= f.label :email, "メールアドレス" %>
    </div>
   <div class="col-md-8">
    <%= f.email_field :email,class:"w-100", autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-4">
    <%= f.label :password, "パスワード" %>
    </div>
    <div class="col-8">
    <%= f.password_field :password,class:"w-100", autocomplete: "current-password" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "ログイン", class:"btn btn-success" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.label :remember_me, "会員登録がお済でない方" %>
    </div>
  <% end %>

<% end %>

<%= render "public/shared/links" %>
</div>
</div>
</div>
</div>