<div class="container">
  <div class="row">
    <div class="col-md-3">
　　　<h2>ログイン</h2>
　　</div>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
　<h4>会員の方はこちらからログイン</h4>
  <div class="row">
    <div class="col-3">
    <%= f.label :email, "メールアドレス" %>
    </div>
   <div class="col-3">
    <%= f.email_field :email,class:"w-100", autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
    <%= f.label :password, "パスワード" %>
    </div>
    <div class="col-3">
    <%= f.password_field :password,class:"w-100", autocomplete: "current-password" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3"></div>
    <div class="col-3">
    <%= f.submit "ログイン", class:"btn btn-primary ml-3" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.label :remember_me, "会員登録がお済でない方" %>
    </div>
  <% end %>

<% end %>

<%= render "public/shared/links" %>
</div>