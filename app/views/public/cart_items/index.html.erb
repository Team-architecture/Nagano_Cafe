<h1>ショッピングカート</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <% @cart_items.each do |cart_item| %>
  <tr>
    <td><%= cart_item.item_id.name %></td>
    <td><%= cart_item.item_id.unit_price %></td>
    <td><%= cart_item.quantity %></td>
    <td><%= cart_item.item_id.unit_price * cart_item.quantity %></td>
    <td>
      <%= link_to "編集する", edit_destination(@customer.id) %>
      <%= link_to "削除する", "#" %>
    </td>
  </tr>
<% end %>
</table>