<div class="container">
<h1>ショッピングカート</h1>
	<div class="row">
		<div class="col-md-5">
		    <%= link_to "カートを空にする", cart_items_destroy_all_path, class: "btn btn-danger ", method: :delete %>
		</div>
		<br>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <% @cart_items.each do |cart_item| %>
  <tr>
    <td><%= cart_item.item.name %></td>
    <td><%= (cart_item.item.unit_price * 1.1).round.to_s(:delimited) %></td>
    <td><%= form_with model: cart_item, url: cart_item_path(cart_item.id), local: true do |f| %>
        <%= f.number_field :quantity, min: 1, max: 50 %>
        <%= f.submit '変更を保存', class: "btn-sm btn-success" %>
        <% end %></td>
    <td><%= (cart_item.item.unit_price * cart_item.quantity * 1.1).round.to_s(:delimited) %> 円</td>
    <td>
      <%= link_to "削除する", cart_item_path(cart_item.id), class: "btn-sm btn-danger", method: :delete %>
    </td>
  </tr>
<% end %>
</table>
</div>
	<div class="row">
		<div class="col-xs-4 mx-5">
	    <%= link_to root_path do %>
	      <button class="btn btn-primary">買い物を続ける</button>
	    <% end %>
	  </div>
		<div class="row">
		  <div class="col-xs-4 mx-5">
		  <% if current_customer.cart_items.any? %>
		      <% if current_customer.cart_items.any? %>
		      	<%= link_to new_order_path do %>
		          <button class="btn btn-lg btn-success">情報入力に進む</button>
		        <% end %>
		      <% end %>
		  <% end %>
		</div>
    <div class="col-xs-4"></div>
		<div class="col-xs-4 ml-5">
	    <table class="table table-bordered">
	      <tr>
	        <th class="active">合計金額</th>
	        <td>¥<%= @total_price.to_s(:delimited)  %></td>
	      </tr>
	    </table>
	  </div>
	</div>
</div>




