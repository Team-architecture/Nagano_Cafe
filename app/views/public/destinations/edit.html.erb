<div class="container">
<div class="row">
    <%= render 'public/destinations/error', destination: @destination %>
    <h2 class="head-line text-center title_h2">配送先編集</h2>
    <%= form_with model:@destination, url:destination_path(@destination), local:true do |f| %>

      <div class="col-xs-10">
          <div class="form-group col-xs-12">
            <%= f.label :"郵便番号（ハイフンなし）",class: "col-xs-3" %>
            <%= f.text_field :postal_code, class: "col-xs-4" %>
          </div>

          <div class="form-group col-xs-12">
             <%= f.label :"住所", class: "col-xs-3" %>
             <%= f.text_field :address, class: "col-xs-7" %>
          </div>

          <div class="form-group col-xs-12">
           <%= f.label :"宛名", class: "col-xs-3" %>
           <%= f.text_area :name, class: "col-xs-4" %>
          </div>
            <%= f.submit '登録する',class: "col-xs-2 pull-right btn-primary" %>
        <% end %>
      </div>
</div>
