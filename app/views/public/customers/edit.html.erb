<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2 class="my-5">会員情報編集</h2>
    </div>
  </div>
        <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
  <div class="container mt-3">
    
   <div class="row">
    <div class="col-2">
     <%= f.label "氏名" %>
    </div>
    <div class="col-3">
     <%= f.text_field :last_name, class:"w-100" %>
    </div>
    <div class="col-3">
    <%= f.text_field :first_name, class:"w-100" %>
    </div>
   </div>

     <div class="row">
      <div class="col-2">
       <%= f.label "フリガナ" %>
      </div>
      <div class="col-3">
       <%= f.text_field :last_name_kana,class:"w-100" %>
      </div>
      <div class="col-3">
       <%= f.text_field :first_name_kana,class:"w-100" %>
      </div>
     </div>

       <div class="row">
        <div class="col-2">
         <%= f.label "郵便番号" %>
        </div>
        <div class="col-3">
         <%= f.text_field :post_code,class:"w-100" %>
        </div>
       </div>

         <div class="row">
          <div class="col-2">
           <%= f.label "住所" %>
          </div>
          <div class="col-6">
           <%= f.text_field :address,class:"w-100" %>
          </div>
         </div>

         <div class="row">
          <div class="col-2">
           <%= f.label "電話番号" %>
          </div>
          <div class="col-3">
           <%= f.text_field :phone_number,class:"w-100" %>
          </div>
         </div>

         <div class="row">
          <div class="col-2">
           <%= f.label "メールアドレス" %>
          </div>
          <div class="col-3">
           <%= f.text_field :email,class:"w-100" %>
          </div>
         </div>
         
         <div class="row">
          <div class="col-2"></div>
           <div class="col-5">
            <%= f.submit "編集内容を保存", class:"btn btn-success" %>
           </div>
           <div class="col-2">
            <%= link_to "退会する", customers_confirm_withdraw_path, class:"btn btn-danger" %>
           </div>
        <% end %>
  </div>
</div>

